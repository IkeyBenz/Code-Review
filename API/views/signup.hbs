<form action="/signup" method="POST" class="container card px-0 my-5">

    <div class="card-header">
        <h3 class="card-title">Register For Code-Review</h3>
    </div>

    <div class="card-body form-group">

        <div class="form-group">
            <label for="name">Name:</label>
            <input type="name" class="form-control" name="name" placeholder="First Last" required>
        </div>

        <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" class="form-control" name="email" placeholder="example@email.com" required>
        </div>

        <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" class="form-control" name="password" placeholder="******" required>
        </div>

    </div>

    <div class="card-footer d-flex">
        <button class="btn btn-primary" type="submit">Register</button>
        <p class="text-muted mx-3 mt-2">Already have an account? <a href="/signin" class="btn btn-link">Sign In</a></p>
    </div>

</form>